@model DotNetCoreWebApp.Models.UserDto;
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card">

                <div class="card-header pt-2 pb-2 text-center bg-primary">

                </div>
                <div class="card-body p-4">
                    <div class="text-center w-75 m-auto">
                        <h4 class="text-dark-50 text-center mt-0 font-weight-bold">Sign In</h4>
                        <p class="text-muted mb-4">Enter your email address and password to access admin panel.</p>
                    </div>
                    <div class="mt-1">
                        <label for="emailaddress">User Name</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                    </div>
                    <div>
                        <a href="#" class="text-muted float-right"><small>Forgot your password?</small></a>
                        <label for="password">Password</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @id = "txtpassword", @class = "form-control" } })
                    </div>
                    <div>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="checkbox-signin" checked>
                            <label class="custom-control-label" for="checkbox-signin">Remember me</label>
                        </div>
                    </div>
                    <div class="mb-0 text-center">
                        <input type="button" id="btnLogin" value="Login" class="btn btn-primary" />
                        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="SignUp">Sign Up</a>
                    </div>



                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/Login.js"></script>
}