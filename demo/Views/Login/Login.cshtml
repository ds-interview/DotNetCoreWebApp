@model demo.Models.User
@{
    ViewBag.Title = "Admin Login";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card">

                <div class="card-header pt-2 pb-2 text-center bg-primary">
                    @*<a href="index.html">
                        <span><img src="~/assets/images/logo-white.svg" alt="" height="60"></span>
                    </a>*@
                </div>
                <div class="card-body p-4">

                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        <div class="text-center w-75 m-auto">
                            <h4 class="text-dark-50 text-center mt-0 font-weight-bold">Sign In</h4>
                            <p class="text-muted mb-4">Enter your email address and password to access admin panel.</p>
                        </div>
                        if (@ViewBag.ErrorMessage != null)
                        {
                            <div id="divwarning" class="bg-warning p-1 rounded">
                                <span><label id="lblmsg"><i class="mdi mdi-alert mr-2"></i>@ViewBag.ErrorMessage</label></span>
                            </div>
                        }

                        <div class="mt-1">
                            <label for="emailaddress">User Name</label>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                        </div>
                        <div>
                            <a href="#" class="text-muted float-right"><small>Forgot your password?</small></a>
                            <label for="password">Password</label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @id = "txtpassword", @class = "form-control" } })
                        </div>
                        <div>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="checkbox-signin" checked>
                                <label class="custom-control-label" for="checkbox-signin">Remember me</label>
                            </div>
                        </div>
                        <div class="mb-0 text-center">
                            <button type="submit" id="btnlogin" name="login" class="btn btn-primary">Log In</button>
                            <a href="/Login/SignUp" class="btn btn-outline-secondary">Sign Up</a>
                            <span class="sr-only mt-5">Loading...</span>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</div>

